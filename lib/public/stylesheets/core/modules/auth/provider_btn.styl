@import '../../functions'

// Provider Button.
.core_provider_btn
  FAT_BORDER = 6px
  BG_COLOR   = darken(white, 6%)
  
  position relative
  border-radius 10px
  background-color BG_COLOR
  
  height 45px
  width 137px
  padding-bottom (FAT_BORDER * 2) 
  border solid FAT_BORDER BG_COLOR
  
  .core_inner_border
    position relative
    padding 5px
    height 100%
    border-radius 4px
    border solid 1px darken(white, 20%)
    background: linear-gradient(top, darken(white, 1%), darken(white, 10%))
    
    // Logos.
    .core_logo
      position relative
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      
      &.core_provider_facebook
        background-image MODULES__AUTH__PROVIDERS__FACEBOOK_GRAY
        &.core_color
          background-image MODULES__AUTH__PROVIDERS__FACEBOOK
      
      &.core_provider_google
        background-image MODULES__AUTH__PROVIDERS__GOOGLE_GRAY
        &.core_color
          background-image MODULES__AUTH__PROVIDERS__GOOGLE
      
      &.core_provider_twitter
        background-image MODULES__AUTH__PROVIDERS__TWITTER_GRAY
        &.core_color
          background-image MODULES__AUTH__PROVIDERS__TWITTER
      
      &.core_provider_yahoo
        background-image MODULES__AUTH__PROVIDERS__YAHOO_GRAY
        &.core_color
          background-image MODULES__AUTH__PROVIDERS__YAHOO
      
      &.core_provider_linked_in
        background-image MODULES__AUTH__PROVIDERS__LINKED_IN_GRAY
        &.core_color
          background-image MODULES__AUTH__PROVIDERS__LINKED_IN
  
  &.core_down
    .core_inner_border
      background: linear-gradient(top, darken(white, 10%), darken(white, 1%))
  
  &.core_selected
    // border solid FAT_BORDER darken(white, 20%)
    border solid FAT_BORDER PRIMARY_BLUE
    .core_inner_border
      background darken(white, 2%)
      border-color PRIMARY_BLUE
  







