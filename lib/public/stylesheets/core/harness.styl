@import '../core/functions'
@import FONT_URL_UBUNTU

SIDEBAR_WIDTH = 250px


.th_harness
  font-family DEFAULT_FONT_FAMILY
  
  // Sidebar.
  .th_sidebar
    abs-pos 0, 0, null, 0
    width SIDEBAR_WIDTH
    background darken(white, 4%)
  
  // Main.
  .th_main
    abs-pos SIDEBAR_WIDTH, 0, 0, 0
    border-left solid 1px darken(white, 60%)
