@import '../core/functions'
@import FONT_URL_UBUNTU

SIDEBAR_WIDTH = 300px
BORDER_COLOR  = darken(white, 60%)

.th_harness
  font-family DEFAULT_FONT_FAMILY
  
  // Sidebar.
  .th_sidebar
    abs-pos 0, 0, null, 0
    width SIDEBAR_WIDTH
    background darken(white, 4%)
    overflow hidden
    overflow-y auto
    
    // Root "descriptions" list.
    .th_desc_list
      height 50%
      ul
        list-style none
        margin 0px
        padding 0px
    
      // Root description button.
      li.th_desc_btn
        cursor pointer
        padding 12px
        border-bottom solid 1px darken(white, 20%)
        p
          padding 0px
          margin 0px
          textEmboss()
        p.th_title
          font-size 12pt
          color darken(white, 80%)
          ellipsis()
        &.core_selected
          background: linear-gradient(top, #6bade1, #428bd1)
          // box-shadow inset 0 0px 5px 2px rgba(black, 0.10)
          p
            color white
            textEmboss rgba(black, 0.3)
    
        // Child descriptions.
        ul.th_sub_descriptions
          display none // Hidden by default.  Revealed on selectin.
          margin 0px
          padding-left 20px
        
          li.th_desc.th_child
            font-size 10pt
            color white
            margin-top 5px

    // "Specs" list.
    .th_specs_list
      height 50%
      top 50%
      background darken(white, 6%)
      .th_title
        border-top solid 1px BORDER_COLOR
        border-bottom solid 1px BORDER_COLOR
        font-size 10pt
        font-weight 500
        padding 8px
        textEmboss()
        color darken(white, 70%)
        background: linear-gradient(top, white, darken(white, 30%))
        box-shadow 0px 0px 15px 3px rgba(black, 0.17)


    
  
  // Main.
  .th_main
    abs-pos SIDEBAR_WIDTH, 0, 0, 0
    border-left solid 1px BORDER_COLOR
    box-shadow 0px 0px 20px 10px rgba(black, 0.15)
    background white
    
  
