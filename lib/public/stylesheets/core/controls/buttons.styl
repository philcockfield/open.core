@import '../common'

.core_btn_cmd
  SILVER  = darken(white, 3%)
  BLUE    = #00bdf3
  
  position relative
  display inline-block;

  button
    width 100%
    height 100%
  
  // Color variants.
  &.core_color_silver > button
    smooth-button(SILVER)
    textEmboss()
    color darken(white, 60%)
    border-color darken(white, 30%)
    font-weight normal

  &.core_color_blue > button
    smooth-button(BLUE)
    font-weight normal
  
  // Size variants.
  &.core_size_s > button
    font-size 8pt

  &.core_size_m > button
    font-size 12pt
    padding 10px 23px

  &.core_size_l > button
    font-size 17pt
    padding 12px 34px


