@import '../functions'


// Functions  --------------------------

-reset()
  // Reset button related properties so that
  // a, button, and input's are supported.
  margin: 0
  user-select: none
  display: inline-block
  text-decoration: none


command-button(bg = #7fbf4d, height = 28px)
  -reset()
  dark = bg - 10%
  background: bg
  background: linear-gradient(height top, bg, dark)
  border: 1px solid dark - 5%
  border-bottom: 1px solid dark
  border-radius: 4px
  box-shadow: inset 0 1px 0 0 lighten(bg, 10%)
  font-family: DEFAULT_FONT_FAMILY
  font-size: 11px
  font-weight: bold
  line-height: 1
  padding: 7px 15px 8px 15px
  text-align: center
  text-shadow: 0 -1px 0 darken(bg, 15%)
  color: #fff

  &:hover
  &.hover
    dark -= 5%
    background: dark
    background: linear-gradient(height top, bg, dark)
    cursor: pointer

  &:active
  &.active
    dark -= 5%
    border: 1px solid dark
    border-bottom: 1px solid dark
    background: linear-gradient(height bottom, bg, dark)
    box-shadow: inset 0 0 8px 4px rgba(black, 0.15), 0 1px 0 0 #eee



// Styles --------------------------

.core_btn_cmd
  SILVER  = darken(white, 3%)
  BLUE    = #00bdf3
  
  position relative
  display inline-block;

  button
    width 100%
    height 100%
  
  // Color variants.
  &.core_color_silver > button
    command-button(SILVER)
    textEmboss()
    color darken(white, 60%)
    border-color darken(white, 30%)
    font-weight normal

  &.core_color_blue > button
    command-button(BLUE)
    font-weight normal
  
  // Size variants.
  &.core_size_s > button
    font-size 8pt

  &.core_size_m > button
    font-size 12pt
    padding 10px 23px

  &.core_size_l > button
    font-size 17pt
    padding 12px 34px
  