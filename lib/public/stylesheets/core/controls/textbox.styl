@import '../common'

.core_textbox
  
  // Constants.
  BORDER_COLOR = darken(white, 50%)
  PADDING = 5px
  
  // Container styles.
  position relative
  display inline-block
  margin 0px
  paddding 0px
  vertical-align bottom
  min-height 30px // NB: Minimum height is 32px incl. top and bottom border.
  min-width 38px
  
  border-radius 4px
  border solid 1px BORDER_COLOR
  background white
  box-shadow darken(white, 10%) 0px 3px 2px inset
  
  // Inner container.
  span.core_inner
    abs-pos PADDING
    
    // Input controls.
    input, textarea
      abs-pos()
      width 100%
      height 100%
      background-color transparent
      display inline-block
      margin 0px
      padding 0px
      border none
      outline none
    textarea
      resize none
    
    // Watermark
    span.core_watermark
      abs-pos 0, 8, 0, 0
      color darken(white, 30%)
      font-style italic
      font-weight normal
      font-size 8pt
  
