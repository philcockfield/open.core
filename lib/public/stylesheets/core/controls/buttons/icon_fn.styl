@import '../../functions'


iconButton(prefix = CLASS_PREFIX)
  .{prefix}_icon_button
    position relative
    cursor default
    display inline-block
    vertical-align bottom
    margin 0px
    padding 0px
    font-size 9pt
    
    // Left icon.
    div.{prefix}_left_icon
      abs-pos()
      background-repeat no-repeat
      background-position 0px 50%
    
    // Label.
    p.{prefix}_label
      position relative
      display inline-block
    
    // Enabled.
    &.{prefix}_enabled
      cursor pointer
      color PRIMARY_BLUE
      &:hover
        p.{prefix}_label
          text-decoration underline

    // Disabled.
    &.{prefix}_disabled
      color darken(white, 40%)



