@import '../functions'


textbox(prefix = CLASS_PREFIX)
  .{prefix}_textbox
  
    // Constants.
    BORDER_COLOR = darken(white, 40%)
    PADDING = 5px
  
    // Container styles.
    position relative
    display inline-block
    margin 0px
    padding 0px
    vertical-align bottom
    min-height 30px // NB: Minimum height is 32px incl. top and bottom border.
    min-width 38px
    
    border-radius 4px
    border solid 1px BORDER_COLOR
    background white
    
    SHADOW = darken(white, 10%) 0px 3px 2px inset
    box-shadow SHADOW
    
    &.{prefix}_focused
      border-color #5c88b6
    
    // Inner container.
    span.{prefix}_inner
      abs-pos PADDING
    
      // Input controls.
      input, textarea
        abs-pos()
        width 100%
        height 100%
        background-color transparent
        display inline-block
        margin 0px
        padding 0px
        border none
        outline none
        font-family DEFAULT_FONT_FAMILY
      textarea
        resize none
    
      // Prompt (Watermark)
      span.{prefix}_prompt
        abs-pos 2, 8, 0, 0
        color darken(white, 30%)
        font-style italic
        font-weight normal
        font-size 10pt
  
