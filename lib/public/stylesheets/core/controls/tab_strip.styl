@import '../functions'

// Images.
imgTabStrip(path)
  url('../../images/controls/tab_strip/' + path)


ul.core_tab_strip
  height 38px
  background: linear-gradient(top, darken(white, 3%), darken(white, 20%))
  overflow hidden
  list-style-type none
  margin 0px
  padding 0px
  
  // Tab: Default.
  li.core_tab
    position relative
    float left
    height 100%
    p
      font-size 10pt
      color darken(white, 70%)
      margin-left 25px
      margin-right 25px
      margin-top 11px
      textEmboss()
      cursor default
    
    div.core_div_left
      abs-pos 0, 0, null, 0
      width 1px
    
    div.core_div_right
      abs-pos null, 0, 0, 0
      width 2px
      background-image imgTabStrip('divider.png')
      background-repeat no-repeat
      background-position right center
    
    &.core_enabled
    
      // Tab: Over.
      &.core_over
        background: linear-gradient(top, darken(white, 5%), darken(white, 25%))
    
      // Tab: Down.
      &.core_down
        background: linear-gradient(top, darken(white, 25%), darken(white, 5%))
        div.core_div_right
          background none
    
      // Tab: Selected.
      &.core_selected
        background: darken(white, 7%)
        BORDER = darken(white, 30%)
        div.core_div_left
          border-left solid 1px BORDER
        div.core_div_right
          background none
          border-right solid 1px BORDER
    
      // Don't show the left hand border for the first tab.
      &.core_first
        div.core_div_left
          border-left none
    
    // Don't show the fade-out divider if the next tab is selected.
    &.core_before_selected
      div.core_div_right
        background none
    
    // Disabled.
    &.core_disabled
      background none
      p
        color darken(white, 30%)
    
    
    
  