@import './_functions'



// "Specs" list.
.th_sidebar > .th_spec_list
  position relative
  height 50%
  top 50%

  .th_scroller
    abs-pos 0, TITLE_BAR_HEIGHT + 2, 0, 0
  
    ul
      margin 5px
      padding 10px
      padding-left 20px
    
      li.th_spec_btn
        cursor pointer
        color LABEL_COLOR
        font-size 10pt
        margin-top 5px
        textEmboss()
        padding 3px