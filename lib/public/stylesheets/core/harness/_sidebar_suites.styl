@import './_functions'

// "Suites" list.
.th_sidebar > .th_suite_list
  abs-pos 0, 0, 0, null
  
  .th_title_bar
    border-top none
  
  .th_scroller
    abs-pos 0, TITLE_BAR_HEIGHT + 1, 0, 0
  
  // Root button.
  li.th_suite.th_root
    padding 12px
    border-bottom solid 1px darken(white, 20%)
    &.core_selected
      background darken(white, 10%)
      box-shadow inset 0 0px 5px 2px rgba(black, 0.10)

    // Child suites.
    ul.th_sub_suites
      margin 0px
      padding-left 14px
      li.th_suite.th_child
        margin-top 5px
        color red
    
