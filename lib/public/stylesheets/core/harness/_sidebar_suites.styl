@import './_functions'

// "Suites" list.
.th_sidebar > .th_suite_list
  height 50%
  overflow-y()
  
  .th_title_bar
    border-top none
  
  .th_scroller
    abs-pos 0, TITLE_BAR_HEIGHT + 1, 0, 0
    ul
      list-style none
      margin 0px
      padding 0px
  
  // Root button.
  li.th_suite_btn
    cursor pointer
    padding 12px
    border-bottom solid 1px darken(white, 20%)
    p
      textEmboss()
    p.th_title
      font-size 12pt
      ellipsis()
    &.core_selected
      background darken(white, 10%)
      box-shadow inset 0 0px 5px 2px rgba(black, 0.10)

    // Child suites.
    ul.th_sub_suites
      margin 0px
      padding-left 12px
      li.th_suite.th_child
        font-size 10pt
        margin-top 5px
        textEmboss()
    
    
    // Sub-suite button.
    .th_sub_suite_btn
      color LABEL_COLOR
      background-image harnessImage('bullet_gray.png')
      background-repeat no-repeat
      background-position 0px 50%
      padding-left 14px
      ellipsis()
    
    .th_sub_suite_btn.core_selected
      background-image harnessImage('bullet_blue.png')
    
