@import 'functions'
@import 'nib'

// Resets.
coreReset()
  global-reset()
  nested-reset()
  reset-box-model()
  reset-body()
  reset-table()
  reset-table-cell()
  reset-html5()

// Constants.
DEFAULT_FONT_FAMILY = "Lucida Grande", Helvetica, Arial, sans-serif


// Common styles.
bevelHighlight()
  absPosition(0, 0, 0, null)
  height: 1px
  background: white

textEmboss()
  text-shadow: 0px 1px 0px white;

noEmboss()
  text-shadow: none;

noSelect()
  user-select none


// Common classes.
body
  font 15px DEFAULT_FONT_FAMILY

div.core_bevel_highlight
  bevelHighlight()
  
.core_text_emboss
  textEmboss()

.core_abs_fill
  abs-pos()
