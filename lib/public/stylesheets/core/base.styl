@import './functions'


// Common classes.
.core_fonts
  font-family DEFAULT_FONT_FAMILY

body.core
  font-family DEFAULT_FONT_FAMILY
  hr
    border none
    border-top solid 1px darken(white, 30%)
    margin 40px 0px


div.core_bevel_highlight
  bevelHighlight()
  
.core_text_emboss
  textEmboss()

.core_abs_fill
  abs-pos()

.core_hidden
  display none

.core_inset_pane
  BG = darken(white, 3%)
  background BG
  border solid 1px darken(white, 26%)
  border-radius 5px
  background-image: url("data:image/png;base64,")
  background-repeat: repeat-x;

a.core_external
  padding-right 10px
  background-image CONTROLS__BUTTONS__EXTERNAL_LINK
  background-repeat no-repeat
  background-position right 50%

// Scrolling.
.core_scroll_x
  overflow-x auto
  overflow-y hidden
  
.core_scroll_y
  overflow-x hidden
  overflow-y auto
  
.core_scroll_xy
  overflow auto

.core_scroll_none
  overflow hidden


// Reset a UL to remove spacing and bullets
ul.core_reset
  margin 0px
  padding 0px
  list-style none


// Supresses the rubber-band bounce effect on the page when scrolling.
head.core_no_bounce, body.core_no_bounce
  height 100%
  overflow hidden


