@import 'nib'

// Constants.
DEFAULT_FONT_FAMILY = "Ubuntu", "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, 'Helvetica Neue', Helvetica, Verdana, sans-serif
FONT_URL_UBUNTU = 'http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,400italic.css'


// Functions.
toUnit(prop, value, unit=px)
    if value is not null
      {prop} unit(value, unit)

abs-pos(left = 0, top = 0, right = 0, bottom = 0, unit=px)
    position absolute
    toUnit 'left', left, unit
    toUnit 'top', top, unit
    toUnit 'right', right, unit
    toUnit 'bottom', bottom, unit

// Style functions.
bevelHighlight()
  abs-pos(0, 0, 0, null)
  height: 1px
  background: white

textEmboss(color = white)
  text-shadow: 0px 1px 0px color;

noEmboss()
  text-shadow: none;

noSelect()
  user-select none

ellipsis()
  text-overflow: ellipsis;
  overflow: hidden;
  white-space:nowrap;


// iOS.
ios-no-flash()
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)



